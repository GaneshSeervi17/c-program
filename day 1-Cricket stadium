#include <stdio.h>

int main() {
    int length, breadth;

  
    scanf("%d", &length);
    scanf("%d", &breadth);


    int perimeter = 2 * (length + breadth);  // for rope
    int area = length * breadth;             // for carpet

    printf("%d\n", perimeter);
    printf("%d\n", area);

    return 0;
}
